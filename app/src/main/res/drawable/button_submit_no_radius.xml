<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/gray_border" android:startColor="@color/gray_border" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/green_temp" android:startColor="@color/green_dark" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#58857e" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/button_green" android:startColor="@color/green_temp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/button_green" android:startColor="@color/green_temp" />
        </shape>
    </item>
</selector>