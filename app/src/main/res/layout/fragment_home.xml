<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <LinearLayout
            android:id="@+id/lin_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tv_checkin_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/lin_site"
            android:id="@+id/lin_checkin_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/checkin_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In Time : "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tv_checkin_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lin_checkin_date"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_below="@+id/lin_site">
            <TextView
                android:id="@+id/checkout_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Out Date : "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_checkout_date"
                android:textColor="@color/black"
                android:text=" - "
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id ="@+id/checkin_button"
        android:layout_marginBottom="70dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:text="Locate Me"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>